<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/miniku_background"
    tools:context=".ReportsActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/miniku_background"
        app:tabIconTint="@color/miniku_dark_blue"
        app:tabIndicator="@drawable/tab_indicator_background"
        app:tabIndicatorColor="@null"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="center"
        app:tabIndicatorHeight="40dp"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/miniku_dark_blue"
        app:tabTextColor="@color/miniku_dark_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reportes"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/miniku_dark_blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupFechas" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:checkedButton="@id/btnMensual"
                android:background="@drawable/rounded_white_background"
                android:padding="4dp">
                <Button
                    android:id="@+id/btnDiario" style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diario"
                    android:textColor="@color/miniku_dark_blue"
                    app:strokeWidth="0dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/selector_toggle_button"/>
                <Button
                    android:id="@+id/btnSemanal" style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Semanal"
                    android:textColor="@color/miniku_dark_blue"
                    app:strokeWidth="0dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/selector_toggle_button"/>
                <Button
                    android:id="@+id/btnMensual" style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mensual"
                    android:textColor="@color/miniku_dark_blue"
                    app:strokeWidth="0dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/selector_toggle_button"/>
                <Button
                    android:id="@+id/btnPersonalizado" style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Personalizado"
                    android:textColor="@color/miniku_dark_blue"
                    app:strokeWidth="0dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/selector_toggle_button"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCategorias" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVentas" style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas"
                    android:checked="true"
                    app:chipBackgroundColor="@color/selector_chip"
                    app:chipCornerRadius="16dp"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInventario" style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventario"
                    app:chipBackgroundColor="@color/selector_chip"
                    app:chipCornerRadius="16dp"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipClientes" style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clientes"
                    app:chipBackgroundColor="@color/selector_chip"
                    app:chipCornerRadius="16dp"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFinanzas" style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finanzas"
                    app:chipBackgroundColor="@color/selector_chip"
                    app:chipCornerRadius="16dp"/>
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/miniku_white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/tvCard1Title" android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Ventas Totales"
                            android:textColor="@color/miniku_dark_blue"/>
                        <TextView
                            android:id="@+id/tvCard1Value" android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="$0.00"
                            android:textColor="@color/miniku_dark_blue"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/miniku_white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/tvCard2Title" android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Productos Vendidos"
                            android:textColor="@color/miniku_dark_blue"/>
                        <TextView
                            android:id="@+id/tvCard2Value" android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="0"
                            android:textColor="@color/miniku_dark_blue"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/miniku_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/tvCard3Title" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Ingresos"
                        android:textColor="@color/miniku_dark_blue"/>
                    <TextView
                        android:id="@+id/tvCard3Value" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="$0.00"
                        android:textColor="@color/miniku_dark_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvDetalleTitulo" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalle de Ventas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/miniku_dark_blue"
                android:layout_marginTop="16dp"/>

            <ListView
                android:id="@+id/lvDetalleVentas" android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/miniku_background"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>